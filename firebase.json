{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|ico)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=604800"
        } ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=31536000"
        } ]
      },
      {
        "source": "**/*.@(json)",
        "headers": [ {
          "key": "Cache-Control",
          "value": "max-age=86400"
        } ]
      }
    ]
  }
}
